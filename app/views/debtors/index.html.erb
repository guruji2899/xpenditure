<h1>Listing debtors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @debtors.each do |debtor| %>
      <tr>
        <td><%= debtor.name %></td>
        <td><%= debtor.amount %></td>
        <td><%= debtor.description %></td>
        <td><%= link_to 'Show', debtor %></td>
        <td><%= link_to 'Edit', edit_debtor_path(debtor) %></td>
        <td><%= link_to 'Destroy', debtor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

