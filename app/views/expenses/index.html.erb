<%= javascript_include_tag "daterangepicker","moment" %>

<form>
  <div class="control-group">
	<div class="controls">
	 <div class="input-prepend input-group">
	   <span class="add-on input-group-addon"><i class="icon-calendar"></i></span>
	   <input type="text" style="width: 200px" name="period" id="period" class="form-control" /> 
	   <button type="submit" class="btn">Submit</button>
	 </div>
	 <div class="pull-right"><h2>Total:  <%= number_to_currency(@total_amount, :unit => " ") %></h2></div>
	</div>
  </div>
 
</form>

<script type="text/javascript">
$(document).ready(function() {
  $('#period').daterangepicker();
});
</script>

<div class="row-fluid">

<%#= link_to 'New Expense', new_expense_path  , :class => "btn btn-success pull-right", :style=>"margin-right:5px;"%>

</div>
<h1>My Expenses</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Expense on</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date.strftime("%d, %b %Y") %></td>
        <td><%= number_to_currency(expense.amount, :unit => '') %></td>
        <td><%= expense.category.name %></td>
        <td style="max-width: 200px;"><%= expense.description %></td>
        
        <td><%= link_to expense , :class => "btn" do %>
        <span class="icon-edit"></span>
        <% end %>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
