<%= link_to 'New Income', new_income_path, :class => "btn btn-success pull-right" %>
<h1>Listing incomes</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.date.strftime("%d, %b %Y") %></td>
        <td><%= number_to_currency(income.amount, :unit => '') %></td>
        <td><%= income.description %></td>
        <td><%= link_to income , :class => "btn btn-info" do %>
        <span class="icon-check"></span>
        <% end %>
        <%= link_to edit_income_path(income) , :class => "btn btn-primary" do %>
          <span class="icon-edit"></span>
        <% end %>
        <%= link_to income, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"  do %>
         <span class="icon-remove"></span>
        <% end %>
        </td>
        

      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

