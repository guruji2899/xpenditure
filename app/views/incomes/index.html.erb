<%= link_to 'New Income', new_income_path, :class => "btn btn-success pull-right" %>
<h1>Listing incomes</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.date %></td>
        <td><%= income.amount %></td>
        <td><%= income.description %></td>
        <td><%= link_to 'Show', income , :class => "btn btn-info"%>
        <%= link_to 'Edit', edit_income_path(income) , :class => "btn btn-primary"%>
        <%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

