<%= link_to 'New Account', new_account_path, :class => "btn btn-success pull-right"  %>
<h1>Listing accounts</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.balance %></td>
        
        <td><%= link_to account , :class => "btn" do %>
        <span class="icon-edit"></span>
        <% end %>
        
       
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


