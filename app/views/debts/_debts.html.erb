
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.date %></td>
        <td><%= debt.amount %></td>
        <td><%= debt.description %></td>
        <td><%= link_to 'Show', debt , :class => "btn btn-info"%>
        <%= link_to 'Edit', edit_debt_path(debt) , :class => "btn btn-primary"%>
        <%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
